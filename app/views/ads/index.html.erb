<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>Tutor</th>
      <th>Subject</th>
      <th>Title</th>
      <th>Description</th>
      <th>Hourly rate</th>
      <th>Valid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.tutor_id %></td>
        <td><%= ad.subject_id %></td>
        <td><%= ad.title %></td>
        <td><%= ad.description %></td>
        <td><%= ad.hourly_rate %></td>
        <td><%= ad.valid %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

